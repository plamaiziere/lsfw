<jtacl>
	<equipments>
		<equipment classname="fr.univrennes1.cri.jtacl.equipments.SimpleRouter"
				   name="R1"
				   comment="router #1"
				   filename="./TestConfigSimpleRouter1.xml"/>

		<equipment classname="fr.univrennes1.cri.jtacl.equipments.SimpleRouter"
				   name="R2"
				   comment="router #2"
				   filename="./TestConfigSimpleRouter2.xml"/>

		<equipment classname="fr.univrennes1.cri.jtacl.equipments.SimpleRouter"
				   name="R3"
				   comment="router #3"
				   filename="./TestConfigSimpleRouter3.xml"/>

		<equipment classname="fr.univrennes1.cri.jtacl.equipments.SimpleRouter"
				   name="R4"
				   comment="router #4"
				   filename="./TestConfigSimpleRouter4.xml"/>

	</equipments>
	<topology>
		<!-- R4 is the border of our network -->
		<tlink network="10.0.4.0/24" topology="R4|10.0.4.4" border="true" />
	</topology>

</jtacl>
